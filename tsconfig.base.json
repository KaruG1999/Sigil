  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@sigil/core": ["packages/core/dist/src"]
    },

    // Este SÍ es válido en TS 5.x
    "ignoreDeprecations": "5.0"
  }
}

